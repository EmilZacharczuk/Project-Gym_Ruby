<h1>Members</h1>
<p><a href="members/new">Add new Member</a></p>
<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Edit</th>
    <th>Remove</th>
  </tr>
  <% for member in @members %>
  <tr>
    <td><a href="members/<%= member.id %>"><%= member.pretty_name %></a></td>
    <td><%= member.address %></td>
    <td><a href="members/<%= member.id %>/edit">Edit</a></td>
    <td><form action="/members/<%= member.id %>/delete" method="POST"><input type="submit" value="Delete"></form></td>
  </tr>
  <% end %>
</table>
